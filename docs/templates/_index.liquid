{% extends 'base' %}

{% block content %}
<div>
    <div class="posts">
        <h1 class="content-subhead">Recent Posts</h1>
        {% for post in posts %}
        <section class="post">
            <header class="post-header">
                <h2 class="post-title"><a href="{{ post.url }}">{{ post.title }}</a></h2>
                <p class="post-meta">
                    {{ post.date_time }}
                </p>
            </header>
            <div class="post-description">
                <p>{{ post.summary }}</p>
            </div>
        </section>
        {% endfor%}
    </div>
</div>
{% endblock %}