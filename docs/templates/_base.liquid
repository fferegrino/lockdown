<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="A layout example that shows off a blog page with a list of posts.">
    <title>{{ site.title }} - {{ site.subtitle }}</title>
    {% include 'head' %}
    {% block head %}{% endblock head %}
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>

<div id="layout" class="pure-g">
    <div class="sidebar pure-u-1 pure-u-md-1-4">
        <div class="header">
            <h1 class="brand-title">{{ site.title }}</h1>
            <h2 class="brand-tagline">{{ site.subtitle }}</h2>

            <nav class="nav">
                <ul class="nav-list">
                    {% for soc in site.social %}
                    <li class="nav-item"><a href="{{ soc.link }}" class="pure-menu-button">{{ soc.name }}</a></li>
                    {% endfor %}
                </ul>
            </nav>
        </div>
    </div>

    <div class="content pure-u-1 pure-u-md-3-4">
        {% block content %}
        {% endblock %}
        <div class="footer">
            <div class="pure-menu pure-menu-horizontal">
                <ul>
                    {% for soc in site.social %}
                    <li class="pure-menu-item"><a href="{{ soc.link }}" class="pure-menu-link">{{ soc.name }}</a></li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</div>

</body>
</html>
